{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,

    "typeRoots": ["@types","./src/generate", "./node_modules/@types"],

    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
